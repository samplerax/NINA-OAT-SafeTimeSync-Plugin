<ResourceDictionary
    x:Class="Samplerax.NINA.OatSafeTimeSync.Options"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  Options UI for OAT Safe Time Sync Plugin  -->
    <DataTemplate x:Key="OAT Safe Time Sync_Options">
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock FontWeight="Bold" FontSize="16" Margin="0,0,0,10">OAT Safe Time Sync Plugin</TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
                This plugin provides automatic meridian flip functionality for OpenAstroTracker (OAT) mounts using safe time monitoring.
            </TextBlock>
            
            <Separator Margin="0,0,0,10"/>
            
            <TextBlock FontWeight="Bold" Margin="0,0,0,5">Configuration</TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                To use this plugin, add the "OAT Safe Time Flip" trigger to your imaging sequence.
                All settings are configured directly on the trigger (click the ⋯ button).
            </TextBlock>
            
            <Separator Margin="0,0,0,10"/>
            
            <TextBlock FontWeight="Bold" Margin="0,0,0,5">Features</TextBlock>
            <StackPanel Margin="10,0,0,10">
                <TextBlock Text="• Automatic flip time calculation and display" Margin="0,2"/>
                <TextBlock Text="• Configurable safe time threshold and polling interval" Margin="0,2"/>
                <TextBlock Text="• Optional guiding pause/resume with force calibration" Margin="0,2"/>
                <TextBlock Text="• Optional autofocus after flip" Margin="0,2"/>
                <TextBlock Text="• Optional plate-solve recentering after flip" Margin="0,2"/>
                <TextBlock Text="• Advanced Sequencer dockable integration" Margin="0,2"/>
            </StackPanel>
            
            <Separator Margin="0,0,0,10"/>
            
            <TextBlock FontWeight="Bold" Margin="0,0,0,5">Links</TextBlock>
            <StackPanel Margin="10,0,0,0">
                <TextBlock Margin="0,2">
                    <Hyperlink NavigateUri="https://github.com/samplerax/NINA-OAT-SafeTimeSync-Plugin" RequestNavigate="Hyperlink_RequestNavigate">
                        GitHub Repository
                    </Hyperlink>
                </TextBlock>
                <TextBlock Margin="0,2">
                    <Hyperlink NavigateUri="https://github.com/samplerax/NINA-OAT-SafeTimeSync-Plugin/blob/main/README.md" RequestNavigate="Hyperlink_RequestNavigate">
                        Documentation
                    </Hyperlink>
                </TextBlock>
                <TextBlock Margin="0,2">
                    <Hyperlink NavigateUri="https://github.com/samplerax/NINA-OAT-SafeTimeSync-Plugin/blob/main/CHANGELOG.md" RequestNavigate="Hyperlink_RequestNavigate">
                        Changelog
                    </Hyperlink>
                </TextBlock>
                <TextBlock Margin="0,2">
                    <Hyperlink NavigateUri="https://github.com/samplerax/NINA-OAT-SafeTimeSync-Plugin/issues" RequestNavigate="Hyperlink_RequestNavigate">
                        Report Issues
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
            
            <Separator Margin="0,10,0,10"/>
            
            <TextBlock FontStyle="Italic" Foreground="Gray" FontSize="10">
                Version 1.2.0 | Licensed under MPL-2.0
            </TextBlock>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>